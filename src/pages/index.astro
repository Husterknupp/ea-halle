---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="Willkommen bei der Evangelischen Allianz Halle"
    subtitle="(Er)lebe Einheit im christlichen Glauben!"
    backgroundImage="/uploads/events/Marktkirche-Halle-wim-van-t-einde-J-l1SWNunPY-unsplash.jpg"
    ctaText="Kontakt"
    ctaLink="/contact"
    secondaryCtaText="Zu unseren Veranstaltungen"
    secondaryCtaLink="/events"
  />

  <!-- Events Section -->
  <EventList
    title="Sei dabei!"
    subTitle="Allianzgebetswoche 2026"
    eventTags={["allianzgebetswoche"]}
    count={30}
    showViewAll={false}
  />

  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Weitere Events</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">ADONIA Konzert</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">
              12. März 2026
            </p>
            <p class="text-gray-600 mb-4">
              Mitmach-Konzert der deutschlandweiten Tour
            </p>
            <p class="italic text-gray-500">Alle Altersgruppen</p>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">TrueStory 2026</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">
              16. Feb - 29. Mär 2026
            </p>
            <p class="text-gray-600 mb-4">Damit Teens Jesus kennenlernen</p>
            <p class="italic text-gray-500">12-18 Jahre</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Unsere Bereiche</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Christliche Gemeinschaften in Halle vereint
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Evangelische Allianz Halle</h3>
          <p class="text-gray-700 mb-4">
            Das überkonfessionelle Netzwerk christlicher Gemeinden in Halle
            (Saale).
          </p>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-secondary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">UNITED</h3>
          <p class="text-gray-700 mb-4">
            Jugendallianz Halle - Gemeinschaft für Teens und junge Erwachsene
          </p>
          <a
            href="/ministries/worship-ministry"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-accent-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Gemeinsam für Halle</h3>
          <p class="text-gray-700 mb-4">
            Gehört GfH zur Evangelischen Allianz Halle?
          </p>
          <a
            href="/ministries/community-outreach"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="uploads/AGW-Logo_mit_Schiftzug.jpg"
            alt="Our Church"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Über uns</h2>
          <p class="text-gray-700 mb-6 text-lg">
            Wir sind ein überkonfessionelles Netzwerk aus christlichen Gemeinden
            in Halle (Saale). Uns vereint der Auftrag von Jesus, dass wir EINS
            sein sollen - ein Leib nach Johannes 17.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Jede christliche Gruppe die der Basis der Evangelischen Allianz in
            Deutschland (EAD) zustimmt ist herzlich eingeladen Teil unserer
            Bewegung zu werden!
          </p>

          <Button href="https://www.ead.de/basis-des-glaubens/" target="_blank">
            Glaubensbasis der EAD
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
          Ready to Join Our Community?
        </h2>
        <p class="text-xl mb-8">
          We'd love to welcome you to our church family. Come visit us this
          Sunday or reach out with any questions.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/events" variant="primary" size="lg">
            Unsere Events
          </Button>

          <Button
            href="/contact"
            variant="outline"
            size="lg"
            class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm"
          >
            Kontaktiere uns
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
